{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
<a class="navbar-brand" href="#"><img width="75" src="https://cdn.discordapp.com/attachments/755825390806761655/953271623614607380/logoSymfony.jpg" />    Projet Symfony</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="#">  Formations</a>
        <a class="nav-link" href="http://localhost/symfony/inscription"> Liste des inscriptions</a>
        <a class="nav-link" href="http://localhost/symfony/employe"> Employes</a>
      </div>
    </div>
  </div>
</nav><br>
    <h1 align="center">Liste des formations</h1><br><br>
    <div class="container raw col-10" align="center">
        <table class="table shadow-lg p-3 mb-5 bg-body rounded" >
            <thead class="thead thead-light">
                <tr align="center">
                    <th>Numéro de la formation</th>
                    <th>Date de début     </th>
                    <th>Nombre d'heures     </th>
                    <th>Departement     </th>
                    <th>Produit</th>
                    <th>actions     </th>
                </tr>
            </thead>
            <tbody>
            {% for formation in formations %}
                <tr align="center">
                    <td>{{ formation.id}}</td>
                    <td>{{ formation.dateDebut ? formation.dateDebut|date('d-m-Y') : '' }}</td>
                    <td>{{ formation.nbresHeures }}</td>
                    <td>{{ formation.departement }}</td>
                    <td>{{ formation.produit.libelle }}</td>
                    <td>
                        <a href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                        <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de formations trouvées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
