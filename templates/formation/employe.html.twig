{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">{% endblock %}
{% block body %}
<div align="center">
    <img src="https://cdn.discordapp.com/attachments/755825390806761655/953271623614607380/logoSymfony.jpg" />
</div>
    <h1 align="center" >Liste des formations</h1><br><br>
    <div class="container raw col-10" align="center">
        <table class="table shadow-lg p-3 mb-5 bg-body rounded" >
        <thead>
            <tr align="center">
                <th>Date de début     </th>
                <th>Nombre d'heures     </th>
                <th>Departement    </th>
                <th>Produit     </th>
                <th>actions     </th>
            </tr>
        </thead>
        <tbody> 
        {% for formation in formations %}
            <tr align="center">
                <td>{{ formation.dateDebut ? formation.dateDebut|date('d-m-Y') : '' }}</td>
                <td>{{ formation.nbresHeures }}</td>
                <td>{{ formation.departement }}</td>
                <td>{{ formation.produit.libelle }}</td>
                <td>
                    <a href="{{ path('inscription_new', {'id': formation.id}) }}">S'inscrire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de formations trouvées</td>
            </tr>
        {% endfor %}
    </table>
    </div>

<br><br>
    <h1 align = "center">Liste des formations déjà inscrit</h1>  <br><br>
    <div class="container raw col-6" align="center">
        <table class="table shadow-lg p-3 mb-5 bg-body rounded" >
        <thead>
            <tr align="center">
                <th>statut    </th>
                <th align="center">Departement </th>
                <th align="center">Produit</th>

            </tr>
        </thead>
            {% for inscription in inscriptions %}
                <tr align="center">
                    
                    <td>{{ inscription.statut}}</td>
                    <td >{{ inscription.formation.departement }}</td>
                    <td >{{ inscription.formation.produit.libelle }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Vous ne vous ètes pas encore inscrit à une formation</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <h6 align = "left">A = Accepter, E = En cours, R = Refuser</h6>  <br><br>
    </div>
{% endblock %}
